<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <properties>
        <property name="format">%d{yyyy-MMM-dd HH:mm:ss} %p [%t] %c %m%n</property>
    </properties>
    <Appenders>
        <RollingRandomAccessFile name="TranslatorLog"
                                 fileName="${env:CATALINA_HOME}/webapps/webapp-translator/logs/webapp.log"
                                 filePattern="${env:CATALINA_HOME}/webapps/webapp-translator/logs/webapp-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <Pattern>${format}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="2 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="50"/>
        </RollingRandomAccessFile>
        <!--
            <File name="TranslatorLog" fileName="${env:CATALINA_HOME}/webapps/webapp-translator/logs/webapp.log">
                <PatternLayout>
                    <Pattern>${format}</Pattern>
                </PatternLayout>
            </File>

            <Console name="STDOUT" target="SYSTEM_OUT">
                <PatternLayout pattern="${format}"/>
            </Console>

            <File name="Log" fileName="${env:CATALINA_HOME}/webapps/webapp-translator/logs/web.log">
              <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
              </PatternLayout>
            </File>
        -->
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="TranslatorLog"/>
            <!--
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="Log" level="error"/>
            -->
        </Root>
    </Loggers>
</Configuration>